@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification" />
<div class="header-container">
    <h1>Category List</h1>
    <br/>
    <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
        Create New Category
    </a>
</div>
<br/>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Display Order</th>
            <th>Created Date Time</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>@category.DisplayOrder</td>
                <td>@category.CreatedDateTime</td>
                <td>
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-info">Edit</a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
